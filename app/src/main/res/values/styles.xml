<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style
        name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>


    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#1a1aff</item>
        <item name="colorButtonNormal">#4d4dff</item>
    </style>



    <style name="MyButton2" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#ff0000</item>
        <item name="colorButtonNormal">#ff0000</item>
    </style>


</resources>
